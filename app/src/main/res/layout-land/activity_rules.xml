<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/back_land"
    tools:context="ru.besuglovs.games.numbers.RulesActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/rules1View" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="1"
                    android:textOff="1"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/button1"
                    android:checked="true"
                    android:layout_margin="0dp" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="2"
                    android:textOff="2"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/button2"
                    android:layout_margin="0dp" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="3"
                    android:textOff="3"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:id="@+id/button3" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="4"
                    android:textOff="4"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/button4" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="5"
                    android:textOff="5"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:id="@+id/button5" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="5"
                    android:textOff="5"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/count1"
                    android:visibility="invisible" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/button8"
                    android:visibility="invisible" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="5"
                    android:textOff="5"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/count2"
                    android:visibility="invisible" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guessNumber"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="1"
                    android:textOff="1"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/button12"
                    android:checked="true"
                    android:layout_margin="0dp" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="3"
                    android:textOff="3"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/button22"
                    android:checked="true"
                    android:layout_margin="0dp" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="5"
                    android:textOff="5"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:id="@+id/button32" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="6"
                    android:textOff="6"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/button42" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="7"
                    android:textOff="7"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/button52" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="3"
                    android:textOff="3"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/count12" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/button82" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="1"
                    android:textOff="1"
                    android:minWidth="20dp"
                    android:layout_weight="1"
                    android:id="@+id/count22" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
